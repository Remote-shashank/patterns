
CARRY FORWARD = TRUE

def obv_condition(df):
    obv = df.OBV
    ema_val = df.EMA
    if obv[-1] > ema_val[-1] and obv[-2] < ema_val[-2]:
        return "Bullish"
    if obv[-1] < ema_val[-1] and obv[-2] > ema_val[-2]:
        return "Bearish"


def ad_condition(df):
    ad = df.AD
    ema_val = df.EMA
    if ad[-1] > ema_val[-1] and ad[-2] < ema_val[-2]:
        return "Bullish"
    if ad[-1] < ema_val[-1] and ad[-2] > ema_val[-2]:
        return "Bearish"

